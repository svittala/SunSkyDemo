<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Capture Credit Card Authorization</label>
    <processType>Flow</processType>
    <recordUpdates>
        <name>Update_Opportunity_Autocode</name>
        <label>Update Opportunity Autocode</label>
        <locationX>167</locationX>
        <locationY>184</locationY>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>OpptyID</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Credit_Card_Authorization__c</field>
            <value>
                <stringValue>1023223CREDITCARD</stringValue>
            </value>
        </inputAssignments>
        <object>Opportunity</object>
    </recordUpdates>
    <screens>
        <name>Get_Credit_Card_Information</name>
        <label>Get Credit Card Information</label>
        <locationX>162</locationX>
        <locationY>79</locationY>
        <allowBack>false</allowBack>
        <allowFinish>true</allowFinish>
        <connector>
            <targetReference>Update_Opportunity_Autocode</targetReference>
        </connector>
        <fields>
            <name>ScreenText</name>
            <fieldText>Please Enter the Credit Card to be used for this transaction.</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <fields>
            <name>UI_First_Name</name>
            <dataType>String</dataType>
            <fieldText>First Name</fieldText>
            <fieldType>InputField</fieldType>
            <isRequired>true</isRequired>
        </fields>
        <fields>
            <name>UILast_Name</name>
            <dataType>String</dataType>
            <fieldText>Last Name</fieldText>
            <fieldType>InputField</fieldType>
            <isRequired>true</isRequired>
        </fields>
        <fields>
            <name>Credit_Card_Number</name>
            <dataType>Number</dataType>
            <fieldText>Credit Card Number</fieldText>
            <fieldType>InputField</fieldType>
            <isRequired>true</isRequired>
            <scale>16</scale>
        </fields>
        <fields>
            <name>Auth_Code</name>
            <dataType>Number</dataType>
            <fieldText>Auth Code</fieldText>
            <fieldType>InputField</fieldType>
            <isRequired>true</isRequired>
            <scale>3</scale>
        </fields>
    </screens>
    <startElementReference>Get_Credit_Card_Information</startElementReference>
    <variables>
        <description>Opportunity ID passed</description>
        <name>OpptyID</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
</Flow>
